<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_btn_large"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_btn_large"
            android:gravity="center"
            android:text="OPERATORS"
            android:textSize="@dimen/txt_size_large"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_power"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_power" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_btn_large"
            android:text="@string/helppower"
            android:textSize="@dimen/txt_size_large" />

        <ImageView
            android:id="@+id/btn_root"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_root" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_btn_large"
            android:text="@string/helproot"
            android:textSize="@dimen/txt_size_large" />

        <ImageView
            android:id="@+id/btn_exp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_exp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_btn_large"
            android:text="@string/helpexponent"
            android:textSize="@dimen/txt_size_large" />

        <ImageView
            android:id="@+id/btn_percantage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_percantage" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_btn_large"
            android:text="@string/helppercentage"
            android:textSize="@dimen/txt_size_large" />

        <ImageView
            android:id="@+id/btn_divide"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_divide" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_btn_large"
            android:text="@string/helpdivide"
            android:textSize="@dimen/txt_size_large" />

        <ImageView
            android:id="@+id/btn_multi"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_multi" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_btn_large"
            android:text="@string/helpmulti"
            android:textSize="@dimen/txt_size_large" />

        <ImageView
            android:id="@+id/btn_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_add" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_btn_large"
            android:text="@string/helpadd"
            android:textSize="@dimen/txt_size_large" />

        <ImageView
            android:id="@+id/btn_subtract"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_subtract" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_btn_large"
            android:text="@string/helpsubtract"
            android:textSize="@dimen/txt_size_large" />

        <ImageView
            android:id="@+id/btn_equal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_equal" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_btn_large"
            android:text="@string/helpequal"
            android:textSize="@dimen/txt_size_large" />

        <ImageView
            android:id="@+id/btn_startbracket"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_startbracket" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_btn_large"
            android:text="@string/helpstartbracket"
            android:textSize="@dimen/txt_size_large" />

        <ImageView
            android:id="@+id/btn_endbracket"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_endbracket" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_btn_large"
            android:text="@string/helpendbracket"
            android:textSize="@dimen/txt_size_large" />

        <ImageView
            android:id="@+id/btn_delete"
            style="@style/style_btn_delete_large"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_delete" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_btn_large"
            android:text="@string/helpdelete"
            android:textSize="@dimen/txt_size_large" />

        <ImageView
            android:id="@+id/btn_save"
            style="@style/style_btn_save_large"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_save" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_btn_large"
            android:text="@string/helpsave"
            android:textSize="@dimen/txt_size_large" />

        <ImageView
            android:id="@+id/btn_del"
            style="@style/style_btn_digit_large"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:src="@drawable/ic_backspace" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_btn_large"
            android:text="@string/helpbackspace"
            android:textSize="@dimen/txt_size_large" />

        <ImageView
            android:id="@+id/btn_paste"
            style="@style/style_btn_paste_large"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_paste" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_btn_large"
            android:text="@string/helppaste"
            android:textSize="@dimen/txt_size_large" />

        <ImageView
            android:id="@+id/btn_copy"
            style="@style/style_btn_paste_large"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_copy" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_btn_large"
            android:text="@string/helpcopy"
            android:textSize="@dimen/txt_size_large" />
    </LinearLayout>

</ScrollView>