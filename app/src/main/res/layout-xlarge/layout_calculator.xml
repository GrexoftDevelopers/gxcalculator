<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/calculatorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1.0"
    tools:context="com.grexoft.quickcalci.MainActivity" >

    <LinearLayout
        android:id="@+id/layout_output"
        
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/margin_btn_xlarge"
        android:layout_marginStart="@dimen/margin_btn_xlarge"
        android:layout_weight="0.25"
        android:gravity="end"
        android:orientation="vertical"
        android:weightSum="1.0" >

        <EditText
            android:id="@+id/display"
            style="@style/style_btn_digit_xlarge"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="0.65"
            android:padding="@dimen/padding_btn_xlarge"
            android:cursorVisible="false"
            android:editable="false"
            android:ems="10"
            android:gravity="right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            android:gravity="right"
            android:orientation="horizontal"
            >
            
            <ImageView
                android:id="@+id/btn_copy"
                style="@style/style_btn_paste_xlarge"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:src="@drawable/ic_copy"/>

            <ImageView
                android:id="@+id/btn_paste"
                style="@style/style_btn_paste_xlarge"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:src="@drawable/ic_paste"/>

            <ImageView
                android:id="@+id/btn_save"
                style="@style/style_btn_save_xlarge"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:src="@drawable/ic_save" />

            <ImageView
                android:id="@+id/btn_clear"
                style="@style/style_btn_delete_xlarge"
                android:layout_width="72dp"                
                android:layout_height="72dp"
                android:layout_margin="2dp"                
                android:src="@drawable/ic_delete" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        android:weightSum="5.2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:weightSum="1.2" >

            <Button
                android:id="@+id/btn_power"
                style="@style/style_btn_operator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.2"
                android:text="@string/power" />

            <Button
                android:id="@+id/btn_percentage"
                style="@style/style_btn_operator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.2"
                android:text="@string/percentage" />

            <Button
                android:id="@+id/btn_one"
                style="@style/style_btn_digit_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.2"
                android:text="@string/one" />

            <Button
                android:id="@+id/btn_four"
                style="@style/style_btn_digit_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.2"
                android:text="@string/four" />

            <Button
                android:id="@+id/btn_seven"
                style="@style/style_btn_digit_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.2"
                android:text="@string/seven" />

            <Button
                android:id="@+id/btn_point"
                style="@style/style_btn_digit_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.2"
                android:text="@string/point" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:weightSum="1.2" >

            <Button
                android:id="@+id/btn_sqrt"
                style="@style/style_btn_operator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.2"
                android:text="@string/squareroot" />

            <Button
                android:id="@+id/btn_divide"
                style="@style/style_btn_operator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.2"
                android:text="@string/divide" />

            <Button
                android:id="@+id/btn_two"
                style="@style/style_btn_digit_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.2"
                android:text="@string/two" />

            <Button
                android:id="@+id/btn_five"
                style="@style/style_btn_digit_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.2"
                android:text="@string/five" />

            <Button
                android:id="@+id/btn_eight"
                style="@style/style_btn_digit_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.2"
                android:text="@string/eight" />

            <Button
                android:id="@+id/btn_zero"
                style="@style/style_btn_digit_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.2"
                android:text="@string/zero" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:weightSum="1.2" >

            <Button
                android:id="@+id/btn_exp"
                style="@style/style_btn_operator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.2"
                android:text="@string/exponent" />

            <Button
                android:id="@+id/btn_multi"
                style="@style/style_btn_operator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.2"
                android:text="@string/multi" />

            <Button
                android:id="@+id/btn_three"
                style="@style/style_btn_digit_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.2"
                android:text="@string/three" />

            <Button
                android:id="@+id/btn_six"
                style="@style/style_btn_digit_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.2"
                android:text="@string/six" />

            <Button
                android:id="@+id/btn_nine"
                style="@style/style_btn_digit_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.2"
                android:text="@string/nine" />

            <ImageView
                android:id="@+id/btn_del"
                style="@style/style_btn_digit_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.2"
                android:padding="25dp"
                android:src="@drawable/ic_backspace" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:weightSum="1.4" >

            <Button
                android:id="@+id/btn_leftparenthes"
                style="@style/style_btn_operator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.225"
                android:text="@string/leftparenthes" />

            <Button
                android:id="@+id/btn_rightparenthes"
                style="@style/style_btn_operator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.225"
                android:text="@string/rightparenthes" />

            <Button
                android:id="@+id/btn_add"
                style="@style/style_btn_operator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.225"
                android:text="@string/add" />

            <Button
                android:id="@+id/btn_minus"
                style="@style/style_btn_operator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.225"
                android:text="@string/minus" />

            <Button
                android:id="@+id/btn_equal"
                style="@style/style_btn_operator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_btn_xlarge"
                android:layout_weight="0.5"
                android:text="@string/equal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>