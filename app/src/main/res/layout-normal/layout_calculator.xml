<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/calculatorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
    android:weightSum="1.0"
    tools:context="com.grexoft.quickcalci.MainActivity" >

    <LinearLayout
        android:id="@+id/layout_output"
        
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/margin_btn_normal"
        android:layout_marginStart="@dimen/margin_btn_normal"
        android:layout_weight="0.25"
        android:gravity="end"
        android:orientation="vertical"
        android:weightSum="1.0" >

        <EditText
            android:id="@+id/display"
            style="@style/style_btn_digit_normal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="0.65"
            android:padding="@dimen/padding_btn_normal"
            android:cursorVisible="false"
            android:editable="false"
            android:ems="10"
            android:gravity="right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            android:gravity="right"
            android:orientation="horizontal"
            >
            
            <ImageView
                android:id="@+id/btn_copy"
                style="@style/style_btn_paste_normal"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="2dp"
                android:src="@drawable/ic_copy"/>

            <ImageView
                android:id="@+id/btn_paste"
                style="@style/style_btn_paste_normal"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="2dp"
                android:src="@drawable/ic_paste"/>

            <ImageView
                android:id="@+id/btn_save"
                style="@style/style_btn_save_normal"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="2dp"
                android:src="@drawable/ic_save" />

            <ImageView
                android:id="@+id/btn_clear"
                style="@style/style_btn_delete_normal"
                android:layout_width="36dp"                
                android:layout_height="36dp"
                android:layout_margin="2dp"                
                android:src="@drawable/ic_delete" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15" />

    <LinearLayout
        android:layout_weight="0.6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="5.2" >

        <LinearLayout
            android:layout_weight="1.2" 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="1.2"
            android:orientation="vertical" >
            
            <Button
                style="@style/style_btn_operator_normal"
                android:id="@+id/btn_power"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="@string/power" 
                android:layout_margin="@dimen/margin_btn_normal" />

             <Button
                 style="@style/style_btn_operator_normal"
                 android:id="@+id/btn_percentage"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.2"
                 android:text="@string/percentage"
                 android:layout_margin="@dimen/margin_btn_normal"  />

             <Button
                 style="@style/style_btn_digit_normal"
                 android:id="@+id/btn_one"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.2"
                 android:text="@string/one"
                 android:layout_margin="@dimen/margin_btn_normal" />

             <Button
                 style="@style/style_btn_digit_normal"
                 android:id="@+id/btn_four"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.2"
                 android:text="@string/four"
                 android:layout_margin="@dimen/margin_btn_normal"  />

             <Button
                 style="@style/style_btn_digit_normal"
                 android:id="@+id/btn_seven"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.2"
                 android:text="@string/seven"
                 android:layout_margin="@dimen/margin_btn_normal"  />

             <Button
                 style="@style/style_btn_digit_normal"
                 android:id="@+id/btn_point"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.2"
                 android:text="@string/point"
                 android:layout_margin="@dimen/margin_btn_normal" />

        </LinearLayout>
        
       
        <LinearLayout
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="1.2"
            android:orientation="vertical" >
             
            <Button
                style="@style/style_btn_operator_normal"
                 android:id="@+id/btn_sqrt"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.2"
                 android:text="@string/squareroot"
                 android:layout_margin="@dimen/margin_btn_normal"  />

             <Button
                 style="@style/style_btn_operator_normal"
                 android:id="@+id/btn_divide"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.2"
                 android:text="@string/divide" 
                 android:layout_margin="@dimen/margin_btn_normal" />

             <Button
                 style="@style/style_btn_digit_normal"
                 android:id="@+id/btn_two"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.2"
                 android:text="@string/two" 
                 android:layout_margin="@dimen/margin_btn_normal" />

             <Button
                 style="@style/style_btn_digit_normal"
                 android:id="@+id/btn_five"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.2"
                 android:text="@string/five"
                android:layout_margin="@dimen/margin_btn_normal"  />

             <Button
                 style="@style/style_btn_digit_normal"
                 android:id="@+id/btn_eight"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.2"
                 android:text="@string/eight"
                 android:layout_margin="@dimen/margin_btn_normal"  />

             <Button
                 style="@style/style_btn_digit_normal"
                 android:id="@+id/btn_zero"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.2"
                 android:text="@string/zero"
                 android:layout_margin="@dimen/margin_btn_normal"  />

        </LinearLayout>
        
        <LinearLayout
             android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="1.2"
            android:orientation="vertical" >

            <Button
                style="@style/style_btn_operator_normal"
                android:id="@+id/btn_exp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="@string/exponent"
                android:layout_margin="@dimen/margin_btn_normal"  />

             <Button
                 style="@style/style_btn_operator_normal"
                 android:id="@+id/btn_multi"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.2"
                 android:text="@string/multi"
                 android:layout_margin="@dimen/margin_btn_normal"  />

             <Button
                 style="@style/style_btn_digit_normal"
                 android:id="@+id/btn_three"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.2"
                 android:text="@string/three" 
                 android:layout_margin="@dimen/margin_btn_normal" />

             <Button
                 style="@style/style_btn_digit_normal"
                 android:id="@+id/btn_six"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.2"
                 android:text="@string/six"
                 android:layout_margin="@dimen/margin_btn_normal"  />

             <Button
                 style="@style/style_btn_digit_normal"
                 android:id="@+id/btn_nine"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.2"
                 android:text="@string/nine"
                 android:layout_margin="@dimen/margin_btn_normal"  />

             <ImageView
                 android:id="@+id/btn_del"
                 style="@style/style_btn_digit_normal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:src="@drawable/ic_backspace"
                android:padding="12dp"
                android:layout_margin="@dimen/margin_btn_normal"  />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4" />
        
        <LinearLayout
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="1.4"
            android:orientation="vertical" >

            <Button
                style="@style/style_btn_operator_normal"
                android:id="@+id/btn_leftparenthes"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.225"
                android:text="@string/leftparenthes" 
                android:layout_margin="@dimen/margin_btn_normal" />

             <Button
                 style="@style/style_btn_operator_normal"
                 android:id="@+id/btn_rightparenthes"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.225"
                 android:text="@string/rightparenthes"
                 android:layout_margin="@dimen/margin_btn_normal"  />

             <Button
                 style="@style/style_btn_operator_normal"
                 android:id="@+id/btn_add"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.225"
                 android:text="@string/add" 
                 android:layout_margin="@dimen/margin_btn_normal" />

             <Button
                 style="@style/style_btn_operator_normal"
                 android:id="@+id/btn_minus"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.225"
                 android:text="@string/minus" 
                 android:layout_margin="@dimen/margin_btn_normal" />

              <Button
                  style="@style/style_btn_operator_normal"
                  android:id="@+id/btn_equal"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="0.5"
                  android:text="@string/equal"
                  android:layout_margin="@dimen/margin_btn_normal"  />
           
        </LinearLayout>
        
       
     </LinearLayout>

</LinearLayout>